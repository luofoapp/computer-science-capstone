<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlay"
    tools:context=".HPWaitingRoom"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="-40dp"
    android:layout_weight="4"
    android:background="@color/barely_white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="20dp"
        android:text="REQUEST A FRIEND"
        android:fontFamily="@font/barlow_regular"
        android:textColor="@color/husk"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/rfDestination"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="-30dp"
        android:layout_weight="2"
        android:text="Destination:"
        android:fontFamily="@font/barlow_light"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="3"
        android:text="  FRIENDS"
        android:fontFamily="@font/barlow_medium"
        android:layout_gravity="center"
        android:textSize="25dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/rfNames"
            android:fontFamily="@font/barlow_regular"
            android:listSelector="@color/salmon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>>
</LinearLayout>


